			<constructor-arg value="1" />
			<constructor-arg value="DAYS" />
			<property name="fixedRate" value="false" />
		</bean>

		<bean name="triggerN"
			class="com.danidemi.jlubricant.spring.context.trigger.NeverTrigger" />

		<alias alias="trigger" name="triggerN" />
